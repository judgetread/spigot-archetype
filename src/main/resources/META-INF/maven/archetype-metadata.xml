<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
  name="spigot-archetype">
  <requiredProperties>
    <requiredProperty key="mainClass">
      <defaultValue>MyPlugin</defaultValue>
    </requiredProperty>
    <requiredProperty key="listenerClass">
      <defaultValue>MyPluginListener</defaultValue>
    </requiredProperty>
    <requiredProperty key="commandClass">
      <defaultValue>MyPluginCommand</defaultValue>
    </requiredProperty>
    <requiredProperty key="commandName">
      <defaultValue>myplugincommand</defaultValue>
    </requiredProperty>
    <requiredProperty key="commandDescription">
      <defaultValue>MyPluginCommand Description</defaultValue>
    </requiredProperty>
    <requiredProperty key="commandAliases">
      <defaultValue>mpc, mpc2, mpc3</defaultValue>
    </requiredProperty>
    <requiredProperty key="pluginName" />
      <defaultValue>MyPlugin</defaultValue>
    </requiredProperty>
    <requiredProperty key="pluginAuthor" />
      <defaultValue>MyPluginDev</defaultValue>
    </requiredProperty>
    <requiredProperty key="pluginDescription" />
      <defaultValue>Just MyPlugin</defaultValue>
    </requiredProperty>
    <requiredProperty key="pluginWebsite">
      <defaultValue>https://MyPlugin/sample</defaultValue>
    </requiredProperty>
    <requiredProperty key="spigotVersion">
      <defaultValue>1.12.2-R0.1-SNAPSHOT</defaultValue>
    </requiredProperty>
    <requiredProperty key="javaVersion">
      <defaultValue>1.8</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <fileSet encoding="UTF-8" filtered="true" packaged="true">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8" filtered="true">
      <directory>src/main/javadoc</directory>
      <includes>
        <include>**/*.html</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8" filtered="true" packaged="true">
      <directory>src/main/javadoc</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8" filtered="true">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
